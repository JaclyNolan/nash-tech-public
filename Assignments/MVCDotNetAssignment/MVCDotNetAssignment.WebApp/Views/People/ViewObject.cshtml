@model Object
@{
    ViewData["Title"] = "View Json";
}

<h1>Displaying Json Data</h1>

@if (Model is null)
{
    <p>No data available</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                @foreach (var prop in Model.GetType().GetProperties())
                {
                    <th>@prop.Name</th>
                }
            </tr>
        </thead>
        <tbody>
            <tr>
                @foreach (var prop in Model.GetType().GetProperties())
                {
                    <td>@prop.GetValue(Model)</td>
                }
            </tr>
        </tbody>
    </table>
}